<% include ./header_admin.ejs %>

<form action="/admin/user/edit/<%= user_edit._id %>" method="POST" role="form">
	<legend>Edit User</legend>
	<div class="form-group">
		<label for="">Username: </label>
		<input type="text" class="form-control" value="<%= user_edit.username %>" name="txtName">
	</div>
	<div class="form-group">
		<label for="">Email: </label>
		<input type="email" class="form-control" value="<%= user_edit.email %>" name="txtEmail">
	</div>
	<div class="form-group">
		<label>Level</label>
		<div class="radio">
			<label>User
				<input type="radio" name="numLevel"  value="0" <% if(user_edit.level === 0){ %> checked="checked" <% } %> >
			</label>
		</div>
		<div class="radio">
			<label>Admin
				<input type="radio" name="numLevel"  value="1" <% if(user_edit.level === 1){ %> checked="checked" <% } %> >
			</label>
		</div>
	</div>
	<button type="submit" class="btn btn-primary">Edit</button>
</form>

<% include ./footer_admin.ejs %>