<% include ./header_admin.ejs %>

<div class="col-lg-12" style="padding-bottom:120px">


<table class="table table-striped table-bordered table-hover" id="dataTables-example">
<thead>
<tr align="center">
<th>Index</th>
<th>id</th>
<th>Size</th>
<th>Color</th>
<th>Quantity</th>
<th>Images</th>
<th>Delete</th>
</tr>
</thead>
<tbody>

<% var index = 0;
if(arrDetails) {
	arrDetails.forEach(function(item) { 
		index++; %>
		<tr class="odd gradeX" align="center">
		<td><%= index %></td>
		<td><%= item.product_id %></td>
		<td><%= item.size %></td>
		<td><%= item.color %></td>
		<td><%= item.quantity %></td>
		<td><%= (item.arr_images).join() %></td>
		<td class="center"><i class="fa fa-trash-o  fa-fw"></i><a href="/admin/product/details/delete/<%= item._id %>">Delete</a></td>
		</tr>
		<% }); } %>
	</tbody>
</table>
<a href="/admin/product/add-details/<%= _id %>" class="btn btn-primary">Add New Details</a>
</div>

<% include ./footer_admin.ejs %>

